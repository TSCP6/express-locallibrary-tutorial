extends layout

block content 
  h1 #{title}: #{book.title}

  if bookinstance.length
    p 
      strong Delete the following bookinstances before attempting to delete the book.

    div(style='margin-left:20px;margin-top:20px')
      h4 Book Instances

      dl
        each instance in bookinstance
          dt
            a(href=instance.url) #{instance.imprint}
          dd Status: #{instance.status}
          dd Due back: #{instance.due_back_formatted}

  else
    p Are you sure you want to delete this book?

    form(method='POST' action='')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=book._id)
      button.btn.btn-primary(type='submit') Delete